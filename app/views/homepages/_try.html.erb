<div class="container-fluid" id="wew">
  <% @questions.each do |question|%>

    <div id="hello">
      <div class="row">
        <div class="col-10">
          <label><span>QUESTION: </span><%= question.question %></label>
        </div>
        <div class="col-2">
            <% if question.answer != [] and question.answer.where(employee_id: @employee.id).pluck(:answer) != []%>
            <% else %>
            <button class="btn btn-sm btn-warning">Answer Question</button>
          <% end%>
        </div>
      </div>
      
      

    </div>
    <% if question.answer != [] and question.answer.where(employee_id: @employee.id).pluck(:answer) != []%>
      <div id="world">
        <div class="row">
          <div class="col-10">
            <label><span>ANSWER: </span><%= question.answer.where(employee_id: @employee.id).pluck(:answer).first%></label>
          </div>
          <div class="col-2">
            <button class="btn btn-sm btn-success">Edit</button>
            <button class="btn btn-sm btn-danger">Delete</button>
          </div>
        </div>
      </div>
     <% end %>
    <div style="height: 30px"></div>

  <% end %>

</div>
