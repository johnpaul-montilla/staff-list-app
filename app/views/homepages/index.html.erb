<% flash.each do |key, value| %>
  <% if key == 'notice'%>
    <%= content_tag :div, value, :class => "alert alert-success #{key}" unless value.blank? %>
  <% else %>
    <%= content_tag :div, value, :class => "alert alert-danger #{key}" unless value.blank? %>
  <% end %>
<% end %>
<h1>List of Employees</h1>

<div id="pages-employees">
  <%= render 'homepages/employee' %>
</div>

<div id="paginator">
  <%= paginate @employees, remote: true %>
</div>


