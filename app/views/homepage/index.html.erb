<h1>List of Employees</h1>


<% if employee_signed_in? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Profile Picture</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <% @questions.each do |question|%>
          <th scope="col"><%= question.question%></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @employees %>
        <% @employees.each do |employee|%>
          <tr>
            <td>
            <%= link_to image_tag(employee.profile_picture, {:style => "width:100px;"}), homepage_path(employee.id)%>
            </td>
            <td>
              <%= link_to employee.username, homepage_path(employee.id) %>
              <% if employee.username == current_employee.username %>
                <br/>
                <p style="color: green">CURRENT USER</p>
              <% end %>
            </td>
            <td> <%= employee.email %> </td>
            <td> <%= employee.role %> </td>

            <% @questions.each do |question|%>
              <% @answers.each do |answer|%>
                <% if question.id == answer.question_id && answer.employee_id == employee.id%>
                  <td><%= answer.answer%></td>
                <% else %>
                  <td></td>
                <% end %>
              <% end %>
            <% end %>

          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<% end %>
