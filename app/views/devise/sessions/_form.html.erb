

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
  <h1>Login</h1>
  <% if flash[:alert]!= "" %>
    <p><%= flash[:alert] %></p>
  <% end %>

  <div class="txtb">
     <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Username" %>
  </div>

  <div class="txtb">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <%= f.submit "Log in", :class => 'logbtn' %>

  <div class="bottom-text">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

<% end %>

