
  
<div id="choice_list">
  <% @questions.each do |question|%>
    <% @count += 1 %>
    <div class="row">
      <div class="col-6">
        <div id="choice_item">
          <div>Question <%= @count%></div><hr/>
          <h5><%= question.question %></h5><br/>
          <% if flash[:error] and @question_num == @count%>
            <p class="alert alert-danger"><%= flash[:error]%></p>
          <% end %>
          <% question.choice.each do |choice|%>
            <div class="row">
              <div class="col-8">
                <label><%= choice.choice %></label>
              </div>
              <div class="col-4">
                <%= link_to 'Edit', edit_choice_path(choice.id), remote: true, :class => 'btn btn-sm btn-success'%> 
                <%= link_to 'Delete', delete_choice_path(:id => choice.id, :question_num => @count), data: {:confirm => 'Are you sure?'}, :method => :delete, :remote => true, :class => 'btn btn-danger btn-sm'%>
              </div>
            </div>
          <% end %>
          <hr/>
          <%= link_to 'Add Choice', new_choice_path(question.id), remote: true, :class => 'btn btn-block btn-primary'%>
        </div>
      </div>
        <div class="add_form_choice" id=<%= "add#{question.id}"%>></div>
    </div>
  <% end %>
</div>

