  <% @questions.each do |question|%>
  <div class="row">
    
    <% @count += 1 %>
    <div class="card border-dark mb-3 col-6" style="max-width: 100rem;">
      <div class="card-header">Question <%= @count%></div>

      <div class="card-body text-dark">
        <h5 class="card-title"><%= question.question %></h5>
        <p class="card-text">
          <% question.choice.each do |choice|%>
            <div class="row">
              <div class="col-s6">
                <label><%= choice.choice %></label>
              </div>
              <div class="col-s6">
                <%= link_to 'Edit', edit_choice_path(choice.id), remote: true, :class => 'btn btn-sm btn-success'%> 
                <%= link_to 'Delete', delete_choice_path(choice.id), data: {:confirm => 'Are you sure?'}, :method => :delete, :remote => true, :class => 'btn btn-danger btn-sm'%>
              </div>
            </div>
          <% end %>
        <%= link_to 'Add Choice', new_choice_path(question.id), remote: true, :class => 'btn btn-block btn-primary'%>
        </p>
      </div>
    </div>
    <div class="add_form_choice" id=<%= "add#{question.id}"%> ></div>
</div>
    
  <% end %>
