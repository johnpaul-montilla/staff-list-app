<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" > -->
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>

  </head>

  <body>


    <% if employee_signed_in? %>
      <div class="sidenav">
        <%= image_tag(current_employee.profile_picture, {:style => "width:150px;", :class => "avatar"}) %>
        <strong><%= current_employee.name %></strong>
        <div style="height: 20px"></div>
        <%= link_to 'Home', root_path%>
        <% if current_employee.role == 'Employee'%>
          <%= link_to 'Profile', homepage_path(current_employee.id)%>
        <% else %>
          <%= link_to 'Admin', admin_employees_path%>
        <% end %>
        <%= link_to "Logout", destroy_employee_session_path, method: :delete %>
      </div>
    <% end %>


    <div class="main">
      <div class="container">
        <div style="height: 20px"></div>
        
        <div style="height: 20px"></div>

        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
