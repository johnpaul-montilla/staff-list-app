<%#
# Application Layout

This view template is used as the layout
for every page that Administrate generates.

By default, it renders:
- Navigation
- Content for a search bar
  (if provided by a `content_for` block in a nested page)
- Flashes
- Links to stylesheets and JavaScripts
%>

<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="utf-8">
  <meta name="ROBOTS" content="NOODP">
  <meta name="viewport" content="initial-scale=1">
  <title>
    <%= content_for(:title) %> - <%= Rails.application.class.parent_name.titlecase %>
  </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" >
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <%= render "stylesheet" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "icons" %>

  <div class="app-container">
    <%#= render "navigation" -%>
    <div class="sidenav">
        <div class="sidenav">
          <%= image_tag(current_employee.profile_picture, {:style => "width:150px;", :class => "avatar"}) %>
          <strong><%= current_employee.name %></strong>
          <div style="height: 20px"></div>
          <%= link_to 'Home', root_path%>
          <div style="height: 30px"></div>

          <%= link_to 'Employees', admin_employees_path%>
          <%= link_to 'Materials', admin_materials_path%>
          <%= link_to 'Questions', admin_questions_path%>
          <%= link_to 'Assign Materials', assign_index_path%>
          <%= link_to 'Choices', choice_index_path%>

          <div style="height: 30px"></div>

          <%= link_to "Logout", destroy_employee_session_path, method: :delete %>

        </div>
      </div>

    <main class="main-content main" role="main">
      <%= render "flashes" -%>
      <%= yield %>
    </main>
  </div>

  <%= render "javascript" %>
</body>
</html>
