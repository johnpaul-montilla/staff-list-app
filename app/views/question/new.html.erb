<h1><%= @question.question%></h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e|%>
    <p class="alert alert-primary"><%= e %></p>
  <% end %>
<% end %>


<% if @question.answer_type == 'Numerical'%>
  <%= form_for(@answer, url:answer_numerical_path) do |f|%>
    <%= f.label :answer%>
    <%= f.number_field :answer%>
    <%= f.submit 'Submit'%>
  <% end %>
<% elsif @question.answer_type == 'Text' %>
  <%= form_for(@answer, url:answer_text_path) do |f|%>
    <%= f.label :answer%>
    <%= f.text_area :answer%>
    <%= f.submit 'Submit'%>
  <% end %>
<% else %>
  <%= form_for(@answer, url:answer_choice_path) do |f|%>
    <%= hidden_field_tag 'question_id', @question.id  %>
    <%= hidden_field_tag 'employee_id', current_employee.id  %>
    <% @choices.each do |choice| %>
      <% if choice.question_id == @question.id%>
        <%= f.radio_button :answer, choice.choice, required: true %>
        <%= f.label :answer, choice.choice %>
      <% end %>
    <% end %>
    <%= f.submit 'Submit'%>
  <% end %>
<% end %>
