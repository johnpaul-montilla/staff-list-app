<% if flash[:errors]%>
  <% flash[:errors].each do |e|%>
    <p class="alert alert-danger"><%= e %></p>
  <% end %>
<% end %>

  <%= form_for(@employee, url: admin_employee_create_path, authenticity_token: true, multipart: true, remote: true) do |f|%>
    <p><div class="row">
      <div class="col-4 "><%= f.label :profile_picture %></div>
      <div class="col-8"><%= f.file_field :profile_picture %></div>
    </div></p>

    <p><div class="row">
      <div class="col-4 "><%= f.label :email%></div>
      <div class="col-8"><%= f.email_field :email %></div>
    </div></p>

    <p><div class="row">
      <div class="col-4 "><%= f.label :name%></div>
      <div class="col-8"><%= f.text_field :name %></div>
    </div></p>

    <p><div class="row">
      <div class="col-4 "><%= f.label :role%></div>
      <div class="col-8"><%= f.select(:role, ["Admin", "Employee"]) %></div>
    </div></p>

    <p><div class="row">
      <div class="col-4 "><%= f.label :password%></div>
      <div class="col-8"><%= f.password_field :password %></div>
    </div></p>

    <p><div class="row">
      <div class="col-4 "><%= f.label :password_confirmation %></div>
      <div class="col-8"><%= f.password_field :password_confirmation %></div>
    </div></p>


    <%= f.submit 'Submit', :class=> 'btn btn-primary btn-block'%>
  <% end %>